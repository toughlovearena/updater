{
  "name": "@toughlovearena/updater",
  "version": "1.0.14",
  "description": "CLI tool for automatically pulling and updating dedicated servers",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json --detectOpenHandles",
    "clean": "npm i && npm run build && npm run format && npm run lint",
    "predeploy": "npm run clean && npm version patch",
    "deploy": "npm publish",
    "build": "rm -rf lib/ && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toughlovearena/updater.git"
  },
  "keywords": [],
  "author": "mpaulweeks@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toughlovearena/updater/issues"
  },
  "homepage": "https://github.com/toughlovearena/updater",
  "dependencies": {
    "simple-git": "^2.39.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.2"
  },
  "files": [
    "lib/**/*"
  ]
}
